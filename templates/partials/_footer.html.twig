<!-- Début du footer -->
<footer class="footer d-flex flex-column align-items-center bg-dark py-5" role="contentinfo" id="footer">
    <!-- Conteneur principal -->
    <div class="container">
        <!-- Début de la ligne contenant les sections du footer -->
        <div class="row text-center text-white">
            <!-- Section des icônes des réseaux sociaux -->
            <div class="social-icons col-md-3">
                <!-- Lien vers Facebook avec icône -->
                <a href="https://www.facebook.com/login" target="_blank" title="Facebook">
                    <span class="bi bi-facebook" aria-hidden="true"></span>
                </a>
                <!-- Lien vers Instagram avec icône -->
                <a href="https://www.instagram.com/accounts/login/" target="_blank" title="Instagram">
                    <span class="bi bi-instagram" aria-hidden="true"></span>
                </a>
                <!-- Lien vers Twitter avec icône -->
                <a href="https://twitter.com/login" target="_blank" title="Twitter">
                    <span class="bi bi-twitter" aria-hidden="true"></span>
                </a>
                <!-- Lien vers TikTok avec icône -->
                <a href="https://www.tiktok.com/login" target="_blank" title="TikTok">
                    <span class="bi bi-tiktok" aria-hidden="true"></span>
                </a>
            </div>

            <!-- Section d'inscription à la newsletter -->
            <div class="col-md-3">
                <!-- Titre de la section newsletter -->
                <p><strong>{{ 'newsletter_subscribe'|trans({}, 'messages', app.request.locale) }}</strong></p>
                <!-- Formulaire d'inscription à la newsletter -->
                <form action="#" method="post">
                    <div class="form-group">
                        <!-- Champ pour entrer l'email -->
                        <input type="email" class="form-control" placeholder="{{ 'newsletter_placeholder'|trans({}, 'messages', app.request.locale) }}">
                    </div>
                    <!-- Bouton d'envoi du formulaire -->
                    <button type="submit" class="btn btn-primary mt-2">
                        {{ 'newsletter_button'|trans({}, 'messages', app.request.locale) }}
                    </button>
                </form>
            </div>

            <!-- Section de contact -->
            <div class="col-md-3">
                <p><strong>{{ 'contact_title'|trans({}, 'messages', app.request.locale) }}</strong></p>
                <address>
                    <!-- Adresse de contact -->
                    <p>{{ 'contact_address'|trans({}, 'messages', app.request.locale) }} Rue de l'Électronique, 123, 1000 Bruxelles, Belgique</p>
                    <!-- Email de contact avec un lien mailto -->
                    <p>{{ 'contact_email'|trans({}, 'messages', app.request.locale) }} <a href="mailto:support@medshop.be" class="text-white">medshop@hotmail.com</a></p>
                    <!-- Numéro de téléphone de contact -->
                    <p>{{ 'contact_phone'|trans({}, 'messages', app.request.locale) }} <a href="tel:+32485950631" class="text-white">+32485950631</a></p>
                    <!-- Informations supplémentaires -->
                    <p>{{ 'company_name'|trans({}, 'messages', app.request.locale) }} : MedShop S.A.</p>
                    <p>{{ 'company_number'|trans({}, 'messages', app.request.locale) }} : BE0123.456.789</p>
                    <p>{{ 'VAT_number'|trans({}, 'messages', app.request.locale) }} : BE0123.456.789</p>
                </address>
            </div>

            <!-- Section des modes de paiement acceptés -->
            <div class="col-md-3">
                <!-- Titre de la section modes de paiement -->
                <p><strong>{{ 'payment_accepted'|trans({}, 'messages', app.request.locale) }}</strong></p>
                <!-- Logos des différents modes de paiement -->
                <img src="{{ asset('images/stripe.jpg') }}" alt="Stripe" height="30">
                <img src="{{ asset('images/visa.jpg') }}" alt="Visa" height="30">
                <img src="{{ asset('images/mastercard.jpg') }}" alt="MasterCard" height="30">
                <img src="{{ asset('images/google.jpg') }}" alt="Google" height="30">
            </div>
        </div>

        <!-- Lien vers les conditions générales de vente -->
        <div class="text-center mt-4">
            <a href="{{ path('condition.index') }}" class="text-white">{{ 'title_condition'|trans({}, 'messages', app.request.locale) }}</a>
        </div>

        <!-- Section des droits d'auteur -->
        <p class="m-0 text-center text-white mt-4">Copyright &copy; Mehdi Assam 2024</p>
    </div>
</footer>
<!-- Fin du footer -->
