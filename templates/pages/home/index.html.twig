{% extends 'base.html.twig' %}

{% block title %}{{ 'home'|trans({}, 'messages', app.request.locale) }}{% endblock %}

{% block body %}
    <section class="bg-dark py-5 position-relative overflow-hidden">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                {% for label, messages in app.flashes(['success', 'warning', 'danger']) %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} mt-4" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
                <h1 class="display-4 fw-bolder">{{ 'smart_shopping'|trans({}, 'messages', app.request.locale) }}</h1>
                <p class="lead fw-normal text-white-50 mb-0">{{ 'buy_new_discounted'|trans({}, 'messages', app.request.locale) }}</p>
            </div>
        </div>
        <img src="{{ asset('images/img-3.jpg') }}" class="img-fluid object-fit-cover h-100 w-100" alt="">
    </section>
{% endblock %}
