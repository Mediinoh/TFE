{% extends 'base.html.twig' %}

{% block title %}{{ 'stripe_error'|trans({}, 'messages', app.request.locale) }}{% endblock %}

{% block body %}
    <section class="py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center">
                <!-- Titre de la section -->
                <h1>{{ 'stripe_error_message'|trans({}, 'messages', app.request.locale) }}</h1> 
            </div>
        </div>
    </section>

    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
        <div class="text-center">
            <!-- Bouton permettant à l'utilisateur de retourner à son panier -->
            <a class="btn btn-outline-dark mt-auto" href="{{ path('panier.list') }}">
                {{ 'my_cart'|trans({}, 'messages', app.request.locale) }}
            </a>
        </div>
    </div>
{% endblock %}