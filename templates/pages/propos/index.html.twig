{% extends 'base.html.twig' %}

{% block title %}{{ 'about'|trans({}, 'messages', app.request.locale) }}{% endblock %}

{% block body %}
    <section class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">{{ 'but_first'|trans({}, 'messages', app.request.locale) }}</h1>
                <p class="lead fw-normal text-white-50 mb-0">{{ 'who_are_we'|trans({}, 'messages', app.request.locale) }}</p>
            </div>
        </div>
    </section>
    
    <section class="py-5">
        <div class="container">
            <h2>{{ 'welcome_message'|trans({}, 'messages', app.request.locale) }}</h2>
            <p>{{ 'introduction_part_1'|trans({}, 'messages', app.request.locale) }}</p>
            <p>{{ 'introduction_part_2'|trans({}, 'messages', app.request.locale) }}</p>

            <p>{{ 'introduction_part_3'|trans({}, 'messages', app.request.locale) }}</p>

            <p>{{ 'introduction_part_4'|trans({}, 'messages', app.request.locale) }} ðŸš€ðŸ’»âœ¨</p>
        </div>
    </section>

    <!-- Section FAQ -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2>FAQ</h2>
            <div class="accordion" id="faqAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            {{ 'what_products_can_you_buy'|trans({}, 'messages', app.request.locale) }}
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            {{ 'products_description'|trans({}, 'messages', app.request.locale) }}
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            {{ 'how_to_place_an_order'|trans({}, 'messages', app.request.locale) }}             
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            {{ 'order_instructions'|trans({}, 'messages', app.request.locale) }}
                       </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingThree">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                            {{ 'accepted_payment_methods'|trans({}, 'messages', app.request.locale) }}     
                       </button>
                    </h2>
                    <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            {{ 'payment_methods_description'|trans({}, 'messages', app.request.locale) }}
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingFour">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                            {{ 'how_to_track_order'|trans({}, 'messages', app.request.locale) }}
                        </button>
                    </h2>
                    <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            {{ 'tracking_instructions'|trans({}, 'messages', app.request.locale) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
        <div class="text-center">
            <a class="btn btn-outline-dark mt-auto" href="{{ path('produits.list') }}">
                {{ 'all_products'|trans({}, 'messages', app.request.locale) }}
            </a>
        </div>
    </div>
{% endblock %}