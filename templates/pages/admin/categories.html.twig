{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <section class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Liste des catégories</h1>
                <p class="lead fw-normal text-white-50 mb-0">Ce que vous avez classé.</p>
            </div>
        </div>
    </section>

    <section class="py-5 container-fluid">
        {% if categories is empty %}
            <p class="text-center">Aucune catégorie dans la base de données !</p>
        {% else %}
            <table class="table table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th scope="col"># Id</th>
                        <th scope="col">Nom</th>
                    </tr>
                </thead>
                <tbody>
                    {% for categorie in categories %}
                        <tr>
                            <td scope="row">{{ categorie.id }}</td>
                            <td>{{ categorie.nomCategorie }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </section>

    <section class="py-5 container-fluid">
        {{ form_start(form) }}
            <div class="form-group mb-3">
                {{ form_label(form.nom_categorie) }}
                {{ form_widget(form.nom_categorie) }}
            </div>
            <div class="form-group mb-3">
                {{ form_widget(form.ajout_categorie) }}
            </div>
        {{ form_end(form) }}
    </section>

    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
        <div class="text-center">
            <a class="btn btn-outline-dark mt-auto" href="{{ path('admin_articles') }}">Liste des articles</a>
        </div>
    </div>
{% endblock %}
