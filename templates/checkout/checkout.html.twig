{# templates/checkout/checkout.html.twig #}

<script src="https://js.braintreegateway.com/web/dropin/1.31.2/js/dropin.min.js"></script>
<script>
    var form = document.querySelector('#checkout-form');
    var clientToken = "{{ clientToken }}";

    braintree.dropin.create({
        authorization: clientToken,
        selector: '#bt-dropin',
        paypal: {
            flow: 'vault'
        }
    }, function (createErr, instance) {
        if (createErr) {
            console.log('Error creating Braintree drop-in:', createErr);
            return;
        }

        form.addEventListener('submit', function (event) {
            event.preventDefault();

            instance.requestPaymentMethod(function (err, payload) {
                if (err) {
                    console.log('Error requesting payment method:', err);
                    return;
                }

                // Ajoutez ici la logique pour envoyer payload.nonce au serveur
            });
        });
    });
</script>

<form id="checkout-form" action="{{ path('checkout_process') }}" method="post">
    <div id="bt-dropin"></div>
    <button type="submit">Payer</button>
</form>
